<UserControl
    x:Class="Lab04Shvachka.Controls.TextBoxWithCaption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab04Shvachka.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Name="textBoxWithCaption">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Name="TbCaption"
            Grid.Row="0"
            Margin="5,5,5,1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="Black"
            Text="Caption" />
        <TextBox
            Grid.Row="1"
            Height="25"
            Margin="5,0,5,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Text="{Binding ElementName=textBoxWithCaption, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</UserControl>
